#!/bin/bash

cd $(dirname $0)

set -e

TEMP=`getopt -o "" --long prefix: -n "$0" -- "$@"`

if [ $? != 0 ]; then exit 1; fi

eval set -- "$TEMP"

PREFIX=/usr/local

while true ; do
    case "$1" in
        --prefix) PREFIX=$2; shift 2;;
        --) shift; break;;
    esac
done

sed -e "s|%PREFIX%|$PREFIX|" \
    < Makefile.in > Makefile
